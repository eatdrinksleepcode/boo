#!/bin/sh

set -e

if [ ! -e ./.config-build ]
then
    echo ''
    echo "Run './bootstrap [<mono version>]' prior to building"
    echo ''
    exit 1
fi

source ./.config-build

${MONO_PATH} --runtime=v4.0 ${BUILD_TOOLS_DIR}/nant/NAnt.exe -t:mono-4.0 ${1:-compile-tests}
echo "Running tests..."

pushd tests
# Replace the nunit framework dll with the downloaded version
cp -f "../${BUILD_TOOLS_DIR}/NUnit-${NUNIT_VERSION}/bin/framework/nunit.framework.dll" build/.
cd build
PEVERIFY=false ${MONO_PATH} --runtime=v4.0 "../../${BUILD_TOOLS_DIR}/NUnit-${NUNIT_VERSION}/bin/nunit-console.exe" -framework=4.0 -stoponerror -nologo -timeout=10000 -noresult -output=stdout.txt -domain=none -exclude=FailsOnMono,FailsOnMono4 *.Tests.dll
