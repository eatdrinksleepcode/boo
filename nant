#!/bin/sh

set -e

SCRIPT_DIR=$(dirname "$0")
BUILD_TOOLS_DIR=${SCRIPT_DIR}/build-tools
CONFIG_FILE=${BUILD_TOOLS_DIR}/.config-build

if [ ! -e ${CONFIG_FILE} ]
then
    echo ''
    echo "Run './bootstrap [<mono version>]' prior to building"
    echo ''
    exit 1
fi

source ${CONFIG_FILE}

${MONO_PATH} --runtime=v4.0 ${TOOLS_DIR}/nant/NAnt.exe -t:mono-4.0 ${1:-compile-tests}
echo "Running tests..."

pushd tests
# Replace the nunit framework dll with the downloaded version
cp -f "../${TOOLS_DIR}/NUnit-${NUNIT_VERSION}/bin/framework/nunit.framework.dll" build/.
cd build
PEVERIFY=false ${MONO_PATH} --runtime=v4.0 "../../${TOOLS_DIR}/NUnit-${NUNIT_VERSION}/bin/nunit-console.exe" -framework=4.0 -stoponerror -nologo -timeout=10000 -noresult -output=stdout.txt -domain=none -exclude=FailsOnMono,FailsOnMono4 *.Tests.dll
